<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a href="{{ path('dashboard') }}" class="brand">CA Financement</a>

			<div class="nav-collapse">
				<ul class="nav">
					{% for entry in entries %}
						{% if entry.__children|length %}
					   		<li class="dropdown">
					   			<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ entry.title }} <b class="caret"></b></a>		
					   			<ul class="dropdown-menu">
					   				{% for child in entry.__children %}
					   					{% if child.title != 'separator' %}
					   						<li><a href="{{ path(child.urls) }}">{{ child.title }}</a></li>
					   					{% elseif child.title == 'separator' %}
					   						<li class="divider"></li>
					   					{% endif %}
					   				{% endfor %}	
					   			</ul>	
					   		</li>
					   	{% elseif entry.level == 1 %}
					   		<li><a href="{{ path(entry.urls) }}">{{ entry.title }}</a></li>	
					   	{% endif %}
					{% endfor %}
				</ul>
				<div class="pull-right">
					<ul class="nav">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ app.user.firstname ~ " " ~ app.user.lastname }}  <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('logout') }}">Se d√©connecter</a></li>
								<li class="divider"></li>
								<li><a href="{{ path('front', {'lang': 'fr'}) }}" target="_blank">Aller sur le site</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>				