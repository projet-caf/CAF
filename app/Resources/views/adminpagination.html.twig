{% block pagination %}
{% set currentPath = path(app.request.attributes.get('_route')) %}
<div class="pagination">
	<ul>
	{% for i in 1..pages %}
		{% if active == i %}
			<li class="active"><a href="{{ currentPath ~ "/" ~ i }}">{{ i }}</a></li>
		{% else %}
			<li><a href="{{ currentPath ~ "/" ~ i }}">{{ i }}</a></li>
		{% endif %}
	{% endfor %}
	</ul>
</div>
{% endblock pagination %}