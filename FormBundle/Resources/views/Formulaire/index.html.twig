{% extends "::admin.html.twig" %}
{% block title "Formulaires" %}

{% block menu %}
	
{% endblock menu %}

{% block titlesection "Formulaires" %}
{% block action %}
	<a href="#modalNew" class="btn btn-primary" data-toggle="modal"><i class="icon-plus-sign icon-white"></i> Ajouter</a>
	<div class="modal hide" id="modalNew">
		<div class="modal-header">
	    	<button type="button" class="close" data-dismiss="modal">×</button>
	    	<h3>Nouveau formulaire</h3>
	    </div>
	    <form action="{{ path("new_formulaire") }}" method="get" id="content_taxonomy">
		    <div class="modal-body">
		    	{{ form_widget(form) }}
		    </div>
		    <div class="modal-footer">
		    	<a href="{{ path('formulaire') }}" class="btn">Fermer</a>
		    	<input type="submit" class="btn btn-primary" value="Valider" />
		    </div>
		</form>
	</div>
	
{% endblock action %}
{% block body %}
<div class="tab-content">    
	{% include "CAFFormBundle:Formulaire:table.html.twig" %}
</div>
{% if app.session.hasFlash('error') %}
    <div class="alert alert-error">
  		<a class="close" data-dismiss="alert" href="#">×</a>
        {{ app.session.flash('error') }}
    </div>
{% elseif app.session.hasFlash('success') %}
    <div class="alert alert-success">
  		<a class="close" data-dismiss="alert" href="#">×</a>
        {{ app.session.flash('success') }}
    </div>    
{% endif %}

{% endblock body %}
{% block script %}
<script type="text/javascript">

function submitPagination() {
	$('#pagination').append('<input type="hidden" name="selectaction" value="pagination" />');
	document.getElementById('fields-form').submit();
}

</script>
{% endblock script %}