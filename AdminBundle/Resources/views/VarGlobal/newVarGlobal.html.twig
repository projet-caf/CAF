{% extends "::admin.html.twig" %}
{% block title "Variable Globale" %}

{% block menu %}
	
{% endblock menu %}

{% block titlesection %}
    {% if id is defined %}
        Editer la Variable Globale
    {% else %}
        Nouvelle Variable Globale
    {% endif %} 
{% endblock titlesection %}
{% block action %}
<a href="{{ path('varGlobal') }}" class="btn"><i class="icon-chevron-left"></i> Retour</a>
{% endblock %}
{% block body %}
{% if id is defined %}
	<form action="{{ path('edit_varGlobal', {'id' : id }) }}" method="post" {{ form_enctype(form) }}>
{% else %}
	<form action="{{ path('new_varGlobal') }}" method="post" {{ form_enctype(form) }}>
{% endif %}		
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    {% if id is defined %}
    	<button type="submit" class="btn">Edit</button>
    {% else %}
    	<button type="submit" class="btn">Create</button>
    {% endif %}		
</form>
{% endblock body %}