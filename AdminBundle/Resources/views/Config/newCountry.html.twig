{% block titlesection "Pays" %}

{% block body %}
{% if id is defined %}
	<form action="{{ path('edit_country', {'id' : id }) }}" method="post" {{ form_enctype(form) }}>
{% else %}
	<form action="{{ path('new_country') }}" method="post" {{ form_enctype(form) }}>
{% endif %}		
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    <a href="{{ path('countries') }}" class="btn">Fermer</a>
    <button type="submit" class="btn btn-primary">Enregistrer</button>
</form>
{% endblock body %}