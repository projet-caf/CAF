{% extends "::admin.html.twig" %}
{% block title "Agence" %}

{% block menu %}
	
{% endblock menu %}

{% block titlesection %}
    {% if id is defined %}
        Editer l'agence
    {% else %}
        Nouvelle Agence
    {% endif %} 
{% endblock titlesection %}

{% block body %}
{% if id is defined %}
	<form action="{{ path('edit_agence', {'id' : id }) }}" method="post" {{ form_enctype(form) }}>
{% else %}
	<form action="{{ path('new_agence') }}" method="post" {{ form_enctype(form) }}>
{% endif %}		
    {{ form_widget(form) }}
    {{ form_rest(form) }}
    {% if id is defined %}
    	<button type="submit">Edit</button>
    {% else %}
    	<button type="submit">Create</button>
    {% endif %}		
</form>
{% endblock body %}